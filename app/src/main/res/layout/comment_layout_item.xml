<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="90"
        android:padding="8dp">
     <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_view"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/ic_launcher"/>
        <RelativeLayout
            android:id="@+id/commentRelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/user_image_view">
            <TextView
                android:id="@+id/user_name_text_view"
                style="@style/TextView.Primary.Bold"
                android:text="Username" />
            <TextView
                android:id="@+id/date_text_view"
                style="@style/TextView.Secondary"
                android:layout_below="@id/user_name_text_view"
                android:text="Date" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/commentRelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_image_view">

            <TextView
                android:id="@+id/commentary_text_view"
                style="@style/TextView.Primary"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:text="Comment" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <ImageButton
            android:id="@+id/commentary_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_drop_up_black_64dp" />
        <TextView
            android:id="@+id/likes_dislikes_text_view"
            style="@style/TextView.Primary.Bold"
            android:text="0" />

        <ImageButton
            android:id="@+id/commentary_dislike"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_drop_down_black_64dp" />

    </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/delimeter_view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/gray_mercury"/>
</LinearLayout>

