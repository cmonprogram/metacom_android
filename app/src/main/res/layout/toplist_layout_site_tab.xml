<LinearLayout
        android:id="@+id/toplist_webView_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
     tools:ignore="UselessParent"
     android:layout_weight="90">

    <WebView
        android:id="@+id/toplist_webView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ProgressBar
        android:id="@+id/toplist_progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true" />

</RelativeLayout>
        <Button
            android:id="@+id/add_toplist_submit"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="10"
            android:text="Submit" />
</LinearLayout>



    <LinearLayout
        android:id="@+id/toplist_go_to_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please be login to do this" />

        <Button
            android:id="@+id/go_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login" />
    </LinearLayout>
</LinearLayout>



