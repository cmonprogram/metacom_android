<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image_view"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/ic_launcher"/>
            <RelativeLayout
                android:id="@+id/commentRelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/user_image_view">
                <TextView
                    android:id="@+id/user_name_text_view"
                    style="@style/TextView.Primary.Bold"
                    android:text="Username" />
                <TextView
                    android:id="@+id/date_text_view"
                    style="@style/TextView.Secondary"
                    android:layout_below="@id/user_name_text_view"
                    android:text="Date" />

            </RelativeLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/subscribers_icon"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_person_64" />

        <TextView
            android:id="@+id/subscribers_text"
            android:layout_gravity="center"
            style="@style/TextView.Primary.Bold"
            android:layout_marginRight="5dp"
            android:text="0" />
        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Subscribe" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/commentRelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/commentary_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_arrow_drop_up_black_64dp" />

        <TextView
            android:id="@+id/likes_text_view"
            style="@style/TextView.Primary.Bold"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/commentary_like"
            android:text="0" />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_weight="60"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_below="@id/commentary_text_view"
            android:layout_toEndOf="@+id/likes_text_view"
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:progress="50"/>
        <ImageButton
            android:id="@+id/commentary_dislike"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/commentary_text_view"
            android:layout_toEndOf="@+id/progressBar"
            android:src="@drawable/ic_arrow_drop_down_black_64dp" />
        <TextView
            android:id="@+id/dislikes_text_view"
            style="@style/TextView.Primary.Bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/commentary_text_view"
            android:layout_toEndOf="@+id/commentary_dislike"
            android:text="0" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Last activity:" />
    </LinearLayout>
</LinearLayout>
